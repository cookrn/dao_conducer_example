<div class="row">
  <div class="span12">
    <h1><%= @conducer.attributes.name %></h1>
  </div>
</div>
<div class="row">
  <div class="span12">
    <pre><%= @conducer.inspect %></pre>
  </div>
</div>
<div class="row btn-row">
  <div class="span12">
    <div class="pull-right">
      <a href="<%= edit_dog_walker_path @conducer.id %>" class="btn btn-large btn-warning">Edit</a>
    </div>
    <a href="<%= dog_walkers_path %>" class="btn btn-large btn-primary">Back</a>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h2>Attributes</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <% @conducer.attributes.each do | key , val | %>
          <tr>
            <th scope="row"><%= key %></th>
            <td><%= @conducer.display_attribute_value val %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h2>Dogs</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Started Walking On</th>
        </tr>
      </thead>
      <tbody>
        <% @conducer.attributes.dogs.each do | dog | %>
          <tr>
            <td><%= dog.name %></td>
            <td><%= dog.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
